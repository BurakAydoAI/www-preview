---
import Layout from "../../layouts/Layout.astro";
import { fetchData } from "../../utils/fetchData";
import "../../css-icons/css/icons-contact.css";

const { info } = await fetchData(Astro.url);
---

<Layout title={info.common.menu.contact + " Us"}>
  <div class="content">
    <!-- Breadcrumbs -->
    <div
      class="box"
      style="text-align: left"
      itemscope
      itemtype="http://schema.org/Corporation"
    >
      <h2>{info.common.menu.contact + " Us"}</h2>
      <img
        itemprop="logo"
        src="/img/sisel.jpg"
        alt="Sisel Logo"
        width="32px"
        style="vertical-align: middle"
      />
      <span
        style="font-size: 20px; color: #f72432; vertical-align: middle"
        itemprop="legalName"
        >SİSEL MÜHENDİSLİK ELEKTRONİK SAN. VE TİC. A.Ş.</span
      >
      <br />
      <br />
      <span itemprop="address" style="font-size: 16px; color: #3d3d3d"
        >ŞERİFALİ MAH. BARBAROS CAD. No:18 Y.DUDULLU ÜMRANİYE / İSTANBUL</span
      >
      <br />
      <br />
      <meta itemprop="brand" content="ENDA" />
      <meta itemprop="url" content="https://enda.com" />
      <meta
        itemprop="description"
        content="Sisel is an engineering company focusing on industrial automation and control. ENDA is a registered trademark of Sisel."
      />

      <div class="one-liner">
        <div class="icon-phone svg-image text-icon"></div><a
          href="tel:+902164994664"
          itemprop="telephone">+90 216 499 46 64 (PBX)</a
        >
      </div>
      <div class="one-liner">
        <div class="icon-phone svg-image text-icon"></div><a
          href="tel:+902164157680"
          itemprop="telephone">+90 216 415 76 80</a
        >
      </div>
      <div class="one-liner">
        <div class="icon-phone svg-image text-icon"></div><a
          href="tel:+902164157689"
          itemprop="telephone">+90 216 415 76 89</a
        >
      </div>
      <div class="one-liner">
        <div class="icon-phone svg-image text-icon"></div><a
          href="tel:+908502214665"
          itemprop="telephone">+90 850 221 46 65</a
        >
      </div>
      <div class="one-liner">
        <div class="icon-fax svg-image text-icon"></div><a
          href="tel:+902163657401"
          itemprop="faxNumber">+90 216 365 74 01</a
        >
      </div>
      <div class="one-liner">
        <div class="icon-mail svg-image text-icon"></div>
        <a href="mailto:sisel@enda.com.tr" itemprop="email">sisel@enda.com.tr</a
        >
      </div>
      <a
        id="navigate-link"
        class="button primary"
        href="https://maps.google.com/maps?ll=41.001427,29.150818&z=16&t=m&hl=en&gl=US&mapclient=embed&daddr=Sisel%20M%C3%BChendislik%20A.%C5%9E.%20%C5%9Eerif%20Ali%20Mah.%20Barboros%20Caddesi%20No%3A18%2034775%20Dudullu%20Osb%2F%C3%9Cmraniye%2F%C4%B0stanbul%2C%20Turkey@41.001427,29.150818"
        >{info.contact.route}</a
      >

      <iframe
        title="map"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.0889172617567!2d29.148629315783396!3d41.00142697930152!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cacf47e069b58b%3A0x50ac6c2f1cc5d547!2sSisel+M%C3%BChendislik+Elektronik+San.+ve+Tic.+A.%C5%9E.!5e0!3m2!1sen!2s!4v1445288790628&navigate=yes"
        width="100%"
        height="450"
        style="border:0"
        allowfullscreen></iframe>
    </div>
  </div>
</Layout>
